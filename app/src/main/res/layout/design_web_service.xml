<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/webServicesRecycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pictWebServ"
        android:layout_width="91dp"
        android:layout_height="100dp"
        android:contentDescription="@string/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/nameWebServ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/titre_informations"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pictWebServ"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressWebServ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/titre_informations"
        app:layout_constraintStart_toStartOf="@+id/nameWebServ"
        app:layout_constraintTop_toBottomOf="@+id/nameWebServ" />

    <TextView
        android:id="@+id/mailWebServ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/titre_informations"
        app:layout_constraintStart_toStartOf="@+id/addressWebServ"
        app:layout_constraintTop_toBottomOf="@+id/addressWebServ" />
</androidx.constraintlayout.widget.ConstraintLayout>